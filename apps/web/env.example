NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration for Better Auth
# DATABASE_URL is the default connection (often postgres super user locally)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.tqoifcqvwrsbniflojcy.supabase.co:5432/postgres

# Prefer a dedicated DB role limited to the better_auth schema for the auth server
# Create role and grants via migration, then set a strong password and enable login:
#   alter role better_auth_user login password 'STRONG_PASSWORD';
# Use that here so Better Auth connects with least privilege.
DATABASE_URL_BETTER_AUTH=postgresql://better_auth_user:[STRONG_PASSWORD]@db.tqoifcqvwrsbniflojcy.supabase.co:5432/postgres

# Better Auth Configuration
BETTER_AUTH_SECRET=your_better_auth_secret_here
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
